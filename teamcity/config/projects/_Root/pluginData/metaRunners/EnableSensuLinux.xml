<?xml version="1.0" encoding="UTF-8"?>
<meta-runner name="Enable Sensu (Linux)">
  <description>Unsilences the sensu checks (linux agent version)</description>
  <settings>
    <parameters>
      <param name="FQDN" value="" />
      <param name="SENSU_ENV" value="sensu.service.veinternal.com" />
    </parameters>
    <build-runners>
      <runner name="Enable Sensu" type="simpleRunner">
        <parameters>
          <param name="command.executable" value="/usr/bin/sensu" />
          <param name="command.parameters" value="unsilence %SENSU_ENV% %FQDN%" />
          <param name="teamcity.step.mode" value="default" />
        </parameters>
      </runner>
    </build-runners>
    <requirements />
  </settings>
</meta-runner>

